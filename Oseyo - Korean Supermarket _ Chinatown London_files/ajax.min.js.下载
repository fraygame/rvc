var currentOffset=4;$(".ajax-posts").each(function(){function t(t,a){r++;var e="&pageNumber="+r+"&ppp="+n+"&cat="+p+"&action="+o+"&offset="+a;return $(".ajax-posts").addClass("load"),$.ajax({type:"POST",dataType:"html",url:ajax_posts.ajaxurl,data:e,success:function(a){$(".ajax-posts").removeClass("load");var e=$(a);e.length?($("#"+t).append(e),$("#"+t+"-btn").attr("disabled",!1)):$("#"+t+"-btn").attr("disabled",!0).remove()},error:function(t,a,e){console.warn(t+" :: "+a+" :: "+e)}}),!1}var a=0,e=0,r=1,s=$(this).attr("id"),n=$(this).attr("data-ppp"),o=$(this).attr("data-type"),d=$(this).attr("data-offset"),p=$(this).attr("data-category");$("#"+s+"-btn").on("click",function(a){a.preventDefault(),$("#"+s+"-btn").attr("disabled",!0),e=currentOffset+=3,t(s,e)})});